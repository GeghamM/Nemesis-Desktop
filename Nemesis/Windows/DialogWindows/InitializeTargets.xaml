            <StackPanel  Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Style="{DynamicResource Button_Style}" Margin="5,10,5,0" Padding="7,3" BorderThickness="0" Background="#FFFF8787" Click="Close">Փակել</Button>
